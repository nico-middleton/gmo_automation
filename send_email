on run argv
    set theFile to POSIX file (item 1 of argv) as alias
    set theSubject to "Automation test"
    set theBody to "This is a test of the automation."
    set theRecipient1 to "nico.middleton@cleandns.email"
    set theRecipient2 to "gia.isabella@cleandns.email"
    set theRecipient3 to "richard.hansen@cleandns.email"

    tell application "Microsoft Outlook"
        set newMessage to make new outgoing message with properties {subject:theSubject, content:theBody}
        make new recipient at newMessage with properties {email address:{name:"Recipient1", address:theRecipient1}}
        make new recipient at newMessage with properties {email address:{name:"Recipient2", address:theRecipient2}}
        make new recipient at newMessage with properties {email address:{name:"Recipient3", address:theRecipient3}}
        make new attachment at newMessage with properties {file:theFile}
        send newMessage
    end tell
end run

